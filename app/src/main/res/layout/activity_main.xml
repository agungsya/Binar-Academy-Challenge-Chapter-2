                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="25dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/clPeduliLindungi">

                <ImageView
                    android:id="@+id/ivVoucher"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_voucher"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvVoucher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:maxWidth="100dp"
                    android:text="@string/gratis_ongkir_voucher"
                    android:textColor="@color/black"
                    android:textStyle="normal"
                    app:layout_constraintLeft_toLeftOf="@id/ivVoucher"
                    app:layout_constraintRight_toRightOf="@id/ivVoucher"
                    app:layout_constraintTop_toBottomOf="@id/ivVoucher" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clShopeeGames"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="25dp"
                app:layout_constraintLeft_toRightOf="@id/clVoucher"
                app:layout_constraintTop_toBottomOf="@id/clPeduliLindungi">

                <ImageView
                    android:id="@+id/ivShopeeGames"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_games"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvShopeeGames"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:maxWidth="100dp"
                    android:text="Shopee Games"
                    android:textColor="@color/black"
                    android:textStyle="normal"
                    app:layout_constraintLeft_toLeftOf="@id/ivShopeeGames"
                    app:layout_constraintRight_toRightOf="@id/ivShopeeGames"
                    app:layout_constraintTop_toBottomOf="@id/ivShopeeGames" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clCod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="25dp"
                app:layout_constraintLeft_toRightOf="@id/clShopeeGames"
                app:layout_constraintTop_toBottomOf="@id/clPeduliLindungi">

                <ImageView
                    android:id="@+id/ivCod"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_cod"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvCod"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:maxWidth="100dp"
                    android:text="Bayar Di Tempat"
                    android:textColor="@color/black"
                    android:textStyle="normal"
                    app:layout_constraintLeft_toLeftOf="@id/ivCod"
                    app:layout_constraintRight_toRightOf="@id/ivCod"
                    app:layout_constraintTop_toBottomOf="@id/ivCod" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clShopeeFood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="25dp"
                app:layout_constraintLeft_toRightOf="@id/clCod"
                app:layout_constraintTop_toBottomOf="@id/clPeduliLindungi">

                <ImageView
                    android:id="@+id/ivShopeeFood"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_shopeefood"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvShopeeFood"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Bayar Di Tempat"
                    android:textColor="@color/black"
                    android:textStyle="normal"
                    app:layout_constraintLeft_toLeftOf="@id/ivShopeeFood"
                    app:layout_constraintRight_toRightOf="@id/ivShopeeFood"
                    app:layout_constraintTop_toBottomOf="@id/ivShopeeFood" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clFlash"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/clShopeeGames">

                <ImageView
                    android:id="@+id/ivVouc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/img_voucher"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvFlashSale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:text="FLASH SALE"
                    android:textColor="@color/orange_shopee"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ivVouc" />

                <ImageView
                    android:id="@+id/ivCountdown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/img_countdown"
                    app:layout_constraintBottom_toBottomOf="@id/tvFlashSale"
                    app:layout_constraintLeft_toRightOf="@id/tvFlashSale"
                    app:layout_constraintTop_toTopOf="@id/tvFlashSale" />

                <TextView
                    android:id="@+id/tvLainnya"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lihat Lainnya"
                    app:layout_constraintBottom_toBottomOf="@id/ivCountdown"
                    app:layout_constraintRight_toLeftOf="@id/ivNext"
                    app:layout_constraintTop_toTopOf="@id/ivCountdown" />

                <ImageView
                    android:id="@+id/ivNext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/ic_outline_navigate_next_24"
                    app:layout_constraintBottom_toBottomOf="@id/tvLainnya"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tvLainnya" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clProduk1"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/shape_shopepay"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/clFlash">

                <ImageView
                    android:id="@+id/ivDisc1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_disc"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/ivProduk1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/img_produk"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvFlashSale1"
                    android:layout_width="wrap_content"
