                    app:layout_constraintLeft_toLeftOf="@id/ivTagihan"
                    app:layout_constraintRight_toRightOf="@id/ivTagihan"
                    app:layout_constraintTop_toBottomOf="@id/ivTagihan" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clSupermarket"
