<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ff5000"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:src="@drawable/ic_baseline_search_24"
            app:layout_constraintBottom_toBottomOf="@id/etSearch"
            app:layout_constraintLeft_toLeftOf="@id/etSearch"
            app:layout_constraintTop_toTopOf="@id/etSearch" />

        <EditText
            android:id="@+id/etSearch"
            android:layout_width="280dp"
            android:layout_height="38dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:background="@color/white_transparent"
            android:hint="Celana Olahraga"
            android:paddingHorizontal="4dp"
            android:paddingVertical="8dp"
            android:paddingStart="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/ivShoppingCart"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ivCamera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_outline_camera_alt_24"
            app:layout_constraintBottom_toBottomOf="@id/etSearch"
            app:layout_constraintRight_toRightOf="@id/etSearch"
            app:layout_constraintTop_toTopOf="@id/etSearch" />

        <ImageView
            android:id="@+id/ivShoppingCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_outline_shopping_cart_24"
            app:layout_constraintBottom_toBottomOf="@id/etSearch"
            app:layout_constraintLeft_toRightOf="@id/etSearch"
            app:layout_constraintRight_toLeftOf="@id/ivChat"
            app:layout_constraintTop_toTopOf="@id/etSearch" />

        <ImageView
            android:id="@+id/ivChat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:src="@drawable/ic_outline_mark_unread_chat_alt_24"
            app:layout_constraintBottom_toBottomOf="@id/etSearch"
            app:layout_constraintLeft_toRightOf="@id/ivShoppingCart"
            app:layout_constraintRight_toRightOf="@id/clTop"
            app:layout_constraintTop_toTopOf="@id/etSearch" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:id="@+id/scIsi"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/clNavBar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clTop">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/isi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivPromo"
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:src="@drawable/shape_promo"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EVENT"
                android:textSize="22sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/ivPromo"
                app:layout_constraintLeft_toLeftOf="@id/ivPromo"
                app:layout_constraintRight_toRightOf="@id/ivPromo"
                app:layout_constraintTop_toTopOf="@id/ivPromo" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clShopepay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="-25dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/shape_shopepay"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ivPromo">

                <ImageView
                    android:id="@+id/ivScanner"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/ic_outline_qr_code_scanner_24"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/ivWallet"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_margin="20dp"
                    android:src="@drawable/ic_baseline_account_balance_wallet_24"
                    app:layout_constraintLeft_toRightOf="@id/ivScanner"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvSaldo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Rp 16.000"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@id/ivWallet"
                    app:layout_constraintLeft_toRightOf="@id/ivWallet"
                    app:layout_constraintTop_toTopOf="@id/ivWallet" />

                <TextView
                    android:id="@+id/tvIsiSaldo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Isi Saldo ShopeePay"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    app:layout_constraintBottom_toBottomOf="@id/ivScanner"
                    app:layout_constraintLeft_toRightOf="@id/ivScanner"
                    app:layout_constraintTop_toBottomOf="@id/tvSaldo" />

                <ImageView
                    android:id="@+id/ivCoin"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="60dp"
                    android:src="@drawable/ic_outline_monetization_on_24"
                    app:layout_constraintBottom_toBottomOf="@id/tvSaldo"
                    app:layout_constraintLeft_toRightOf="@id/tvSaldo"
                    app:layout_constraintTop_toTopOf="@id/tvSaldo" />

                <TextView
                    android:id="@+id/tvCoin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="5 Koin"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@id/tvKlaimKoin"
                    app:layout_constraintLeft_toRightOf="@id/ivCoin"
                    app:layout_constraintTop_toTopOf="@id/ivCoin" />

                <TextView
                    android:id="@+id/tvKlaimKoin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Klaim Koin di sini"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    app:layout_constraintBottom_toBottomOf="@id/ivScanner"
                    app:layout_constraintLeft_toLeftOf="@id/ivCoin"
                    app:layout_constraintTop_toBottomOf="@id/tvCoin" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clPeduliLindungi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="25dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/clShopepay">

                <ImageView
                    android:id="@+id/ivPeduliLindungi"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_pedulilindungi"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvPeduliLindungi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:maxWidth="100dp"
                    android:text="PeduliLindungi"
                    android:textColor="@color/black"
                    android:textStyle="normal"
                    app:layout_constraintLeft_toLeftOf="@id/ivPeduliLindungi"
                    app:layout_constraintRight_toRightOf="@id/ivPeduliLindungi"
                    app:layout_constraintTop_toBottomOf="@id/ivPeduliLindungi" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clTagihan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="25dp"
                app:layout_constraintLeft_toRightOf="@id/clPeduliLindungi"
                app:layout_constraintTop_toBottomOf="@id/clShopepay">

                <ImageView
                    android:id="@+id/ivTagihan"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_tagihan"
