                    android:layout_height="100dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/img_produk"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvFlashSale2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Rp62.500"
                    android:textColor="@color/orange_shopee"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="@id/ivProduk2"
                    app:layout_constraintRight_toRightOf="@id/ivProduk2"
                    app:layout_constraintTop_toBottomOf="@id/ivProduk2" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clProduk3"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/shape_shopepay"
                app:layout_constraintLeft_toRightOf="@id/clProduk2"
                app:layout_constraintTop_toBottomOf="@id/clFlash">

                <ImageView
                    android:id="@+id/ivDisc3"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_disc"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/ivProduk3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/img_produk"
                    app:layout_constraintBottom_toBottomOf="parent"
