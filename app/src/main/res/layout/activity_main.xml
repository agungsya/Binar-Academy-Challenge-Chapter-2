                    app:layout_constraintRight_toRightOf="@id/ivSupermarket"
                    app:layout_constraintTop_toBottomOf="@id/ivSupermarket" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clShopeeMall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="25dp"
                app:layout_constraintLeft_toRightOf="@id/clSupermarket"
                app:layout_constraintTop_toBottomOf="@id/clShopepay">

                <ImageView
                    android:id="@+id/ivShopeeMall"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_shopeemall"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvShopeeMall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:maxWidth="100dp"
                    android:text="Shopee Supermarket"
                    android:textColor="@color/black"
                    android:textStyle="normal"
                    app:layout_constraintLeft_toLeftOf="@id/ivShopeeMall"
                    app:layout_constraintRight_toRightOf="@id/ivShopeeMall"
                    app:layout_constraintTop_toBottomOf="@id/ivShopeeMall" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clVoucher"
