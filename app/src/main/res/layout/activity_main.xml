                    android:layout_marginTop="10dp"
                    android:text="Rp62.500"
                    android:textColor="@color/orange_shopee"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="@id/ivProduk1"
                    app:layout_constraintRight_toRightOf="@id/ivProduk1"
                    app:layout_constraintTop_toBottomOf="@id/ivProduk1" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clProduk2"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/shape_shopepay"
                app:layout_constraintLeft_toRightOf="@id/clProduk1"
                app:layout_constraintTop_toBottomOf="@id/clFlash">

                <ImageView
                    android:id="@+id/ivDisc2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
